<div class="mx-auto flex flex-col lg:flow-row pb-6">
  <div class="mx-auto w-full">
    <% if notice.present? %>
      <p class="px-3 py-2 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block">
        <%= notice %>
      </p>
    <% end %>

    <% if @course.lessons.any? && @course.lessons.first.video.present? %>
      <%= video_tag @course.lessons.first.video, controls: true, class: "w-full rounded mb-6" %>
    <% end %>

    <div class="border p-6 rounded">
      <div class="flex justify-start items-center flex-wrap w-full mb-2">
        <% @course.categories.each do |category| %>
          <div class="bg-amber-100 text-amber-800 text-sm font-semibold mt-2 mr-2 px-2.5 py-0.5 rounded">
            <%= category.name %>
          </div>
        <% end %>
      </div>

      <span><%= @course.lessons.count %> <%= "lesson".pluralize(@course.lessons.count) %></span>

      <h1 class="text-2xl font-bold"><%= @course.title %></h1>
      <p class="text-gray-500 mt-2"><%= @course.description %></p>
    </div>

    <%= link_to "Back to courses", courses_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
